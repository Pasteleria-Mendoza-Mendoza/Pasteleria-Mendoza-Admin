﻿@using ProyectAdmin.BL.DTOs.ProductDTOs
@model ProductCreateInputDTO
<!DOCTYPE html>
<html>
<body>
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.ErrorMessage
        </div>
    }
    <div class="container mt-4">
        <div class="card" style="max-width: 600px; margin: 0 auto;">
            <div class="card-header d-flex justify-content-between align-items-center" style="background-color: #da9f5b; border-bottom: 1px solid #e0e0e0;">
                <h3 style="margin: 0; padding: 10px; flex: 1; text-align: center; color: white;">Crear nuevo producto</h3>
                <a asp-action="Index" asp-controller="Product" class="btn btn-danger ml-2">X</a>
            </div>


            <div class="card-body" style="background-color: #FFFFFF;">
                <form asp-action="Create" asp-controller="Product" method="post" class="row" enctype="multipart/form-data">
                    <div class="col-md-6">
                        <!-- Columna 1 -->
                        <div class="form-group">
                            <label asp-for="NameProduct" class="font-weight-bold">Nombre</label>
                            <input asp-for="NameProduct" class="form-control" />
                            <span asp-validation-for="NameProduct" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Dimensions" class="font-weight-bold">Dimensiones</label>
                            <input asp-for="Dimensions" class="form-control" />
                            <span asp-validation-for="Dimensions" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="exampleFormControlFile1">Imagen</label>
                            <input type="file" name="ImageUrl" class="form-control-file" id="exampleFormControlFile1">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Price</label>
                            <input asp-for="Price" type="text" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <!-- Columna 2 -->
                        <div class="form-group">
                            <label asp-for="Quantity" class="font-weight-bold">Cantidad</label>
                            <input asp-for="Quantity" class="form-control" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="DueDate" class="font-weight-bold">Fecha de vencimiento</label>
                            <input asp-for="DueDate" class="form-control" type="date" />
                            <span asp-validation-for="DueDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="AcquisitionDate" class="font-weight-bold">Fecha de adquisición</label>
                            <input asp-for="AcquisitionDate" class="form-control" type="date" />
                            <span asp-validation-for="AcquisitionDate" class="text-danger"></span>
                        </div>

                    </div>

                    <button type="submit" class="btn btn-primary"><i class="bi bi-download"></i>Create</button>
                    <a asp-action="Index" asp-controller="Product" class="btn btn-warning"><i class="bi bi-arrow-left"></i>Back tolist</a>
                </form>
            </div>
        </div>
    </div>

</body>
</html>