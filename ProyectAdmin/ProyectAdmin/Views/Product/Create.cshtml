@using ProyectAdmin.BL.DTOs.ProductDTOs
@model ProductCreateInputDTO
<!DOCTYPE html>
<html>
<head>
    <title>Crear nuevo producto</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

</head>
<body>
    <div class="container">
        <div class="card mx-auto" style="max-width: 600px;">
            <div class="card-header text-center" style="background-color: #343a40; color: white;">
                <h3 class="mb-0">Pasteleria Mendoza</h3>
            </div>

            <div class="card-body">
                <form asp-action="Create" asp-controller="Product" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-6">
                            <!-- Columna 1 -->
                            <div class="form-group">
                                <label asp-for="NameProduct" class="form-label">Nombre</label>
                                <input asp-for="NameProduct" class="form-control" />
                                <span asp-validation-for="NameProduct" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Dimensions" class="form-label">Dimenensiones</label>
                                <textarea asp-for="Dimensions" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="Dimensions" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price" class="form-label">Precio</label>
                                <input asp-for="Price" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleFormControlFile1" class="form-label">Imagen</label>
                                <input type="file" name="ImageUrl" class="form-control-file" id="exampleFormControlFile1">
                            </div>
                        </div>

                        <div class="col-md-6">
                            <!-- Columna 2 -->
                            <div class="form-group">
                                <label asp-for="Quantity" class="form-label">Cantidad</label>
                                <input asp-for="Quantity" class="form-control" />
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="form-label">Descripción</label>
                                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DueDate" class="form-label">Fecha de vencimiento</label>
                                <input asp-for="DueDate" class="form-control" type="date" />
                                <span asp-validation-for="DueDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="AcquisitionDate" class="form-label">Fecha de adquisición</label>
                                <input asp-for="AcquisitionDate" class="form-control" type="date" />
                                <span asp-validation-for="AcquisitionDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-outline-dark btn-block"><i class="bi bi-download"></i> Crear</button>
                        </div>
                        <div class="col-md-6">
                            <a asp-action="Index" asp-controller="Product" class="btn btn-outline-dark btn-block"><i class="bi bi-arrow-left"></i> Volver</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
