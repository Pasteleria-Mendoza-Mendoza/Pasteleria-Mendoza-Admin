@model ProyectAdmin.BL.DTOs.ProductOrderViewModel;


<!DOCTYPE html>
<html>
<head>
    <title>Detalle del Producto</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .product-image {
            max-width: 100%;
            height: auto;
            margin-bottom: 20px; /* Espacio entre la imagen y el formulario */
        }

        .product-details {
            padding: 20px;
        }

        .form-heading {
            margin-bottom: 20px;
        }

        .product-info {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 5px;
        }

            .product-info h4 {
                color: #343a40;
                font-size: 20px;
                margin-bottom: 15px;
            }

            .product-info ul {
                list-style: none;
                padding-left: 0;
            }

            .product-info li {
                margin-bottom: 10px;
            }

                .product-info li strong {
                    font-weight: bold;
                }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            <!-- Columna de la imagen -->
            <div class="col-md-6">
                <img src="http://localhost:5000/images/@Model.Product.ImageUrl" class="product-image" alt="@Model.Product.NameProduct">
            </div>

            <!-- Columna del formulario -->
            <div class="col-md-6">
                <div class="card product-details">
                    <!-- Texto "Reservar Producto" arriba del formulario -->
                    <h4 class="form-heading">Reservar Producto</h4>

                    <!-- Formulario para ingresar datos -->
                    <form method="post" asp-controller="PushesOrder" asp-action="AddOrder">
                        <!-- Agrega los campos del formulario aquí -->
                        <div class="form-group">
                            <label asp-for="@Model.Order.Names" class="form-label">Nombres:</label>
                            <input asp-for="@Model.Order.Names" class="form-control" />
                            <span asp-validation-for="@Model.Order.Names" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Order.LastNames" class="form-label">Apellidos:</label>
                            <input asp-for="@Model.Order.LastNames" class="form-control" />
                            <span asp-validation-for="@Model.Order.LastNames" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Order.DUI" class="form-label">DUI:</label>
                            <input asp-for="@Model.Order.DUI" class="form-control" />
                            <span asp-validation-for="@Model.Order.DUI" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Order.Adress" class="form-label">Direccion:</label>
                            <input asp-for="@Model.Order.Adress" class="form-control" />
                            <span asp-validation-for="@Model.Order.Adress" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Order.Phone" class="form-label">Numero de contacto:</label>
                            <input asp-for="@Model.Order.Phone" class="form-control" />
                            <span asp-validation-for="@Model.Order.Phone" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Order.Amount" class="form-label">Cantidad a reservar:</label>
                            <input asp-for="@Model.Order.Amount" class="form-control" />
                            <span asp-validation-for="@Model.Order.Amount" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Order.Dimension" class="form-label">Dimension del pastel:</label>
                            <input asp-for="@Model.Order.Dimension" class="form-control" />
                            <span asp-validation-for="@Model.Order.Dimension" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Order.Dedication" class="form-label">Dedicatoria:</label>
                            <input asp-for="@Model.Order.Dedication" class="form-control" />
                            <span asp-validation-for="@Model.Order.Dedication" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Order.DeliverDate" class="form-label">Elegir fecha para la entegra:</label>
                            <input asp-for="@Model.Order.DeliverDate" class="form-control" type="date" />
                            <span asp-validation-for="@Model.Order.DeliverDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Order.Details" class="form-label">Mas detalles:</label>
                            <input asp-for="@Model.Order.Details" class="form-control" />
                            <span asp-validation-for="@Model.Order.Details" class="text-danger"></span>
                        </div>
                        <!-- Agrega más campos según sea necesario -->

                        <button type="submit" class="btn btn-outline-dark">Reservar</button>
                        <a asp-action="Index" asp-controller="Product" class="btn btn-outline-dark"><i class="bi bi-arrow-left"></i>Back to list</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>




