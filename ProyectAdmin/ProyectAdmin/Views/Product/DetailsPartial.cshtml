@model ProyectAdmin.BL.DTOs.ProductDTOs.ProductGellAllDTO
<!DOCTYPE html>
<html>
<head>
    <title>Detalle del Producto</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .product-image {
            max-width: 80%;
            height: auto;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            display: block;
            margin: 0 auto;
        }

        .product-details {
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            height: 100%;
        }

        .product-title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .product-info {
            margin-bottom: 20px;
        }

            .product-info p {
                margin-bottom: 5px;
                font-size: 16px;
            }

        .btn-add-to-cart {
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            display: block;
            margin: 0 auto;
        }

            .btn-add-to-cart:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <img src="http://localhost:5000/images/@Model.ImageUrl" class="product-image" alt="@Model.NameProduct">
            </div>

            <div class="col-md-6">
                <div class="product-details">
                    <h2 class="product-title">@Model.NameProduct</h2>
                    <div class="product-info">
                        <p><strong>Descripción:</strong> @Model.Description</p>
                        <p><strong>Dimensiones:</strong> @Model.Dimensions</p>
                        <p><strong>Cantidad:</strong> @Model.Quantity</p>
                        <p><strong>Fecha de adquisición:</strong> @Model.AcquisitionDate.ToString("yyyy-MM-dd")</p>
                        <p><strong>Fecha de vencimiento:</strong> @Model.DueDate.ToString("yyyy-MM-dd")</p>
                        <p><strong>Precio:</strong> @Model.Price.ToString("C")</p>
                    </div>

                    <button type="submit" class="btn btn-outline-dark">Hacer reserva</button>
                    <a asp-action="Index" asp-controller="Product" class="btn btn-outline-dark"><i class="bi bi-arrow-left"></i>Back to list</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

