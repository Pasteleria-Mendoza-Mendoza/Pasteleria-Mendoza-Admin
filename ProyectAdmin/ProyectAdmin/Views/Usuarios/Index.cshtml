﻿@using ProyectAdmin.BL.DTOs.UsuariosDTOs
@model List<UsuarioSearchOutputDTO>

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Usuarios</title>
    <!-- Agrega enlaces a Bootstrap si no están ya incluidos en tu proyecto -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
    {
        <div class="alert alert-success" role="alert">
            @ViewBag.SuccessMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(ViewBag.DangerMessage))
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.DangerMessage
        </div>
    }

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center" style="background-color: #343a40; border-bottom: 1px solid #e0e0e0;">
            <h3 style="margin: 0; padding: 10px; flex: 1; text-align: center; color: white;">Lista de Usuarios</h3>
            <a asp-action="Create" asp-controller="Usuarios" class="btn btn-success">Añadir</a>
        </div> 
        <div class="card-body" style="background-color: #FFFFFF;">
            <hr />
            <div class="table-responsive" style="background-color: #FFFFFF;">
                <table class="table table-bordered table-hover">
                    <thead style="background-color: #343a40; color: white;">
                        <tr>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Rol</th>
                            <th>Usuario</th>
                            <th>Estado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var usuario in Model)
                        {
                            <tr>
                                <td>@usuario.Nombre</td>
                                <td>@usuario.Apellido</td>
                                <td>@usuario.NombreRol</td>
                                <td>@usuario.Usuario</td>
                                <td>@(usuario.Estado == 1 ? "Activo" : "Inactivo")</td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@usuario.UsuarioId" class="btn btn-info btn-sm">Detalle</a>
                                    <a asp-action="Edit" asp-route-id="@usuario.UsuarioId" class="btn btn-warning btn-sm">Editar</a>
                                    <a asp-action="Delete" asp-route-id="@usuario.UsuarioId" class="btn btn-danger btn-sm">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Agrega scripts de Bootstrap si no están ya incluidos en tu proyecto -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>