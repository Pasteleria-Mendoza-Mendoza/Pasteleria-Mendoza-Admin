@model ProyectAdmin.BL.DTOs.UsuariosDTOs.UsuarioSearchOutputDTO
@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center" style="background-color: #F74646; border-bottom: 1px solid #e0e0e0;">
            <h3 style="margin: 0; padding: 10px; flex: 1; text-align: center; color: white;">Eliminar Usuario</h3>
        </div>

        <div class="card-body" style="background-color: #FFFFFF;">
            <form asp-action="Delete" method="post">
                <div class="mt-3 text-center">
                    <h4>¿Estás seguro que deseas eliminar al usuario <strong>@Model.Nombre @Model.Apellido</strong>?</h4>
                    <input type="hidden" asp-for="UsuarioId" />
                </div>

                <div class="form-group text-center mt-4">
                    <a asp-action="Index" class="btn btn-secondary" style="margin-right: 10px;">Cancelar</a>
                    <button type="submit" class="btn btn-danger" style="margin-left: 10px;">Eliminar</button>
                </div>
            </form>
        </div>
    </div>
</div>
